# Database Configuration
USE_EMBEDDED_REPLICA=false  # Set to 'true' to use Turso embedded replica, 'false' for local-only
LOCAL_DB_PATH=./data/ilios.db  # Local SQLite file path

# Turso Database (only needed if USE_EMBEDDED_REPLICA=true)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token
TURSO_SYNC_INTERVAL=60  # Sync interval in seconds (default: 60)

# Optional Database Security
DB_ENCRYPTION_KEY=  # Optional: encryption key for local database

# S3 Storage (Tigris or AWS S3 compatible)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_ENDPOINT_URL_S3=https://fly.storage.tigris.dev
S3_BUCKET=your-bucket-name

# Mistral API
MISTRAL_API_KEY=your-mistral-api-key

# API Authentication (ACL)
# If set, all endpoints require valid Bearer token except /health, /docs, /openapi.json
# Supports multiple keys (comma-separated): API_KEY=key1,key2,key3
API_KEY=your-api-key