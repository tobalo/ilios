{
  "name": "ilios-api",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --target=bun --outfile=dist/index.js",
    "build:cli": "bun build --compile --minify --sourcemap ./src/index.ts --outfile ilios",
    "build:cli:prod": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile ilios",
    "build:cli:linux": "bun build --compile --minify --sourcemap --target=bun-linux-x64 ./src/index.ts --outfile ilios-linux",
    "build:cli:windows": "bun build --compile --minify --sourcemap --target=bun-windows-x64 ./src/index.ts --outfile ilios.exe",
    "build:cli:mac": "bun build --compile --minify --sourcemap --target=bun-darwin-x64 ./src/index.ts --outfile ilios-mac",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.3",
    "@libsql/client": "^0.15.15",
    "@mistralai/mistralai": "^1.10.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.10",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5"
  }
}